generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                Int      @id @default(autoincrement())
  first_name        String
  last_name         String
  date_of_birth     DateTime
  email             String   @unique
  phone_number      String
  address           String
  is_active         Boolean  @default(true)
  last_purchase_date DateTime
  total_orders      Int
  total_spent       Float
  customer_type     String
  preferred_contact_method String
  createdAt         DateTime @default(now())
  orders            Order[]
  reviews           Review[]
}

model Brand {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  products Product[]
}
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  products  Product[]
}

model Product {
  id              Int      @id @default(autoincrement())
  name            String
  category_id     Int
  brand_id        Int      @default(1)
  price           Float
  stock_quantity  Int
  category        Category @relation(fields: [category_id], references: [id])
  brand           Brand    @relation(fields: [brand_id], references: [id])
  orders          Order[]
  reviews         Review[]
}
model Order {
  id          Int      @id @default(autoincrement())
  product_id  Int
  customer_id Int
  order_date  DateTime
  quantity    Int
  price       Float
  order_status String
  product     Product   @relation(fields: [product_id], references: [id])
  customer    Customer  @relation(fields: [customer_id], references: [id])
}

model Review {
  id          Int      @id @default(autoincrement())
  product_id  Int
  customer_id Int
  rating      Int
  comments    String
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [product_id], references: [id])
  customer    Customer @relation(fields: [customer_id], references: [id])
}

