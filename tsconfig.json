{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/types/express/index.d.ts",
    "prisma/seed-customers.ts",
    "prisma/seed-products.ts"
  ]
}
